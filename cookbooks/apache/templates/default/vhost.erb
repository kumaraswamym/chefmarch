#virtual host template file
 <VirtualHost *:<%= @port %> >
    ServerName <%= @domain %>
    DocumentRoot <%= @document_root %>
  
   <Directory />
     Options Followsymlinks
    AllowOverride None
  </Directory>
  <Directory <%= @document_root %> >
     Options Indexes FollowSymlinks Multiviews
     AllowOverride None
     Order allow,deny
     allow from all
  </Directory>
</VirtualHost>
